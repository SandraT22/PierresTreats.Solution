@{
  Layout = "_Layout";
}

@model PierresTreat.Models.Treat

<h2>Add an Flavor</h2>

<h4>Add a flavor to this treat: @Model.Name</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Add Flavor" class="btn btn-dark" />
}
<p>@Html.ActionLink("Back to list", "Index")</p>