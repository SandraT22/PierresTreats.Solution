@{
  Layout = "_Layout";
}

@using PierresTreat.Models;
@model List<PierresTreat.Models.Treat>;

@if (User.Identity.IsAuthenticated)
{
  <h1>Books added by @User.Identity.Name</h1>
  @if (Model.userTreats.Any())
  {
      <ul>
      @foreach (Treat treat in Model.userBooks)
      {
        <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
      }
    </ul>
  }
  else
  {
    <h3>User has not added any treats.</h3>
  }
}
else
{
  <h1>All the treats in the system.</h1>
}

@if (Model.treats.Any())
{
  <hr />
  <h3>Treats added by others.</h3>
  <ul>
    @foreach (Treat treat in Model.books)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
}
else
{
  <h3>No treats have been added yet.</h3>
}
<hr />
<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Go Back Home", "Index", "Home")</p>