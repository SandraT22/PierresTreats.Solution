@{
  Layout = "_Layout";
}

@model PierresTreat.Models.Treat

<h2>Treat Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h4>Flavors:</h4>
@if(@Model.JoinEntities.Count == 0)
{
  <p>This item does not belong to any flavors</p>
}
else
{
  <h4>Flavors the item belongs to:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Flavor.Name</li>
    @using (Html.BeginForm("DeleteFlavor", "Items"))
    {
      @Html.Hidden("joinId", @join.FlavorTreatId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}
<hr />


<p>@Html.ActionLink("Add a flavor", "AddFlavor", new { id = Model.TreatId })</p>

<p>@Html.ActionLink("Back to treats", "Index")</p>
<p>@Html.ActionLink("Edit treats", "Edit", new { id = Model.TreatId })</p>
<p>@Html.ActionLink("Delete treats", "Delete", new { id = Model.TreatId })</p>